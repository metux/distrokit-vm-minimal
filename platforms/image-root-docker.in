## SECTION=image

menuconfig IMAGE_ROOT_DOCKER
	tristate
	prompt "Generate docker rootfs image  "
	help
	  Upload the image into a local docker instance
	  The image will be tagged with the specified label

if IMAGE_ROOT_DOCKER

config IMAGE_ROOT_DOCKER_LABEL
	string
	prompt "label"
	default "${PTXCONF_PROJECT_VENDOR}-${PTXCONF_PROJECT}:v${PTXCONF_PROJECT_VERSION}"
	help
	  This string gets expanded to form the docker image label.
	
	  Note that this label needs for fit the docker label syntax.

config IMAGE_ROOT_DOCKER_MESSAGE
	string
	prompt "message"
	default "ptxdist auto-import: ${PTXCONF_PROJECT_VENDOR}-${PTXCONF_PROJECT}${PTXCONF_PROJECT_VERSION}"
	help
	  This string gets expanded to form a message for the docker import call
	    ${PTXCONF_PROJECT_VENDOR}-${PTXCONF_PROJECT}${PTXCONF_PROJECT_VERSION}

config IMAGE_ROOT_DOCKER_CMD
	string
	prompt "docker command"
	default "$(DOCKER)"
	help
	  Specify custom docker command (eg. in case some extra args required)

endif
